<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resetPasswordScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título de Restablecimiento de Contraseña -->
        <TextView
            android:id="@+id/tvResetPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restablecer Contraseña"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Campo de Nombre de Usuario -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de Usuario"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Campo de Respuesta de Seguridad -->
        <EditText
            android:id="@+id/etRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta de Seguridad"
            android:inputType="text"
            android:drawableStart="@drawable/ic_answer"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Campo de Nueva Contraseña -->
        <EditText
            android:id="@+id/etNuevaContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón de Restablecer Contraseña -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restablecer Contraseña"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
