<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transferScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".TransferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título de Transferencia -->
        <TextView
            android:id="@+id/tvTransferTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transferir Fondos"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Spinner para Seleccionar Contacto -->
        <Spinner
            android:id="@+id/spinnerContactos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_contact"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Número de Cuenta Destino -->
        <EditText
            android:id="@+id/etNumeroCuentaDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Cuenta Destino"
            android:inputType="number"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Monto -->
        <EditText
            android:id="@+id/etMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón de Transferir -->
        <Button
            android:id="@+id/btnTransferir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transferir"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botón de Agregar Contacto -->
        <Button
            android:id="@+id/btnAgregarContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Contacto"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
